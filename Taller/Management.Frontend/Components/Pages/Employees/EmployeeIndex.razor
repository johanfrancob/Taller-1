@page "/employee"

@if (loading)
{
    <Loading />
}
else
{
    <MudTable Items="@employees"
              @ref="table"
              ServerData="LoadListAsync"
              Dense="true"
              Hover="true"
              Striped="true"
              FixedHeader="true"
              FixedFooter="true">
        <ToolBarContent>
            <div class="d-flex justify-content-between">
                <MudText Typo="Typo.h6" Class="me-4">Empleados</MudText>
                <MudButton Variant="Variant.Outlined"
                           EndIcon="@Icons.Material.Filled.Add"
                           Color="Color.Info" OnClick="@(() => ShowModalAsync())">
                    Nuevo
                </MudButton>
            </div>
            <MudSpacer />
            <FilterComponent ApplyFilter="SetFilterValue" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh style="width: 120px;">Nombre</MudTh>
            <MudTh style="width: 120px;">Apellido</MudTh>
            <MudTh Style="width: 120px;">Salario</MudTh>
            <MudTh style="width: 120px;">Fecha de contratación</MudTh>
            <MudTh style="width: 40px;">Activo</MudTh>
            <MudTh style="width: 80px;">Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.FirstName</MudTd>
            <MudTd>@context.LastName</MudTd>
            <MudTd>@context.Salary.ToString("C")</MudTd>
            <MudTd>@context.HireDate.ToString("dd/MM/yyyy")</MudTd>
            <MudTd>
                @if (context.IsActive)
                {
                    <MudIcon Color="Color.Success" Icon="@Icons.Material.Filled.CheckCircle" />
                }
                else
                {
                    <MudIcon Color="Color.Error" Icon="@Icons.Material.Filled.Cancel" />
                }
            </MudTd>
            <MudTd>
                <MudTooltip Text="Editar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               OnClick="@(() => ShowModalAsync(context.Id, true))">
                        <MudIcon Icon="@Icons.Material.Filled.Edit" />
                    </MudButton>
                </MudTooltip>
                <MudTooltip Text="Borrar">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               OnClick="@(() => DeleteAsync(context))">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" />
                    </MudButton>
                </MudTooltip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>"No hay registros"</MudText>
        </NoRecordsContent>
        <PagerContent>
            <MudTablePager RowsPerPageString="Número de registros"
                           PageSizeOptions="pageSizeOptions"
                           AllItemsText="Todo"
                           InfoFormat="@infoFormat" />
        </PagerContent>
    </MudTable>
}
